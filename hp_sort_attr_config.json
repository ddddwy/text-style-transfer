{
  "training": {
    "optimizer": "adadelta",
    "learning_rate": 1.0,
    "max_norm": 2.0,
    "epochs": 80,
    "batches_per_report": 100,
    "batches_per_sampling": 500,
    "random_seed": 1
  },
  "data": {
    "src": "data/hp/train.hp.txt",
    "tgt": "data/hp/train.new.txt",
    "src_dev": "data/hp/dev.new.txt",
    "tgt_dev": "data/hp/dev.hp.txt",
    "src_truth": "data/hp/test.new.txt",
    "tgt_truth": "data/hp/test.hp.txt",
    "src_vocab": "data/hp/dict.20k",
    "tgt_vocab": "data/hp/dict.20k",
    "share_vocab": true,
    "attribute_vocab": "data/yelp/dict_attr_top500.20k",
    "batch_size": 10,
    "max_len": 50,
    "working_dir": "hp_sort_attr_run"
  },
    "model": {
        "model_type": "delete_retrieve",
        "emb_dim": 128,
        "attention": false,
        "encoder": "lstm",
        "enc_hidden_dim": 512,
        "enc_layers": 1,
        "bidirectional": true,
        "dec_hidden_dim": 512,
        "dec_layers": 1,
        "decode": "greedy",
        "dropout": 0.2
    }
}